<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="saas_upgrade_form" model="ir.ui.view">
            <field name="name">Upgrade Modules</field>
            <field name="model">saas.upgrade</field>
            <field name="arch" type="xml">
                <form string="Upgrade Module">
                    <group>
                        <field name="module_ids"/>
                    </group>
                    <footer>
                        <button name="do_upgrade" class="oe_highlight" string="Upgrade"
                                type="object"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_saas_upgrade_build" model="ir.actions.act_window">
            <field name="name">Upgrade Modules</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.upgrade</field>
            <field name="context">{'source_mode': 'saas.db'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="saas.model_saas_db" />
            <field name="binding_view_types">list</field>
        </record>

        <record id="action_saas_upgrade_template" model="ir.actions.act_window">
            <field name="name">Upgrade Modules</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.upgrade</field>
            <field name="context">{'source_mode': 'saas.template.operator'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="saas.model_saas_template_operator" />
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>